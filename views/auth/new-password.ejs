<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <div class="card container" style="width: 30rem;">
      <img src="/img/logo-white.jpg" class="card-img-top" alt="Image Here" />
      <div class="card-body">
        <form class="login-form" action="/new-password" method="POST">
          <div class="form-group">
            <div class="input-group flex-nowrap">
              <div class="input-group-prepend">
                <span class="input-group-text" id="addon-wrapping">@</span>
              </div>
              <input
                class="form-control form-control-lg <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email"
                name="email"
                id="email"
                placeholder="Email"
                value="<%= oldInput.email %>"
              />
            </div>
          </div>
          <input type="hidden" name="userId" value="<%= userId %>" />
          <input
            type="hidden"
            name="passwordToken"
            value="<%= passwordToken %>"
          />

          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="btn btn-primary btn-lg" type="submit">
            Update Password
          </button>
        </form>
        <div class="text-right">
          <a href="/forgotPassword">Forgot Password</a>
        </div>
      </div>
    </div>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
