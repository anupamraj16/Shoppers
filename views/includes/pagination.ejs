<nav aria-label="...">
  <ul class="pagination justify-content-center" style="margin-top: 16px;">
    <% if (currentPage !== 1 && previousPage !== 1) { %>
    <li class="page-item">
      <a
        class="page-link"
        href="<% if (typeof searchQuery !== undefined) { %><% searchQuery %><% } %>?page=1"
        >1</a
      >
    </li>
    <% } %> <% if (hasPreviousPage) { %>
    <li class="page-item">
      <a
        class="page-link"
        href="<% if (typeof searchQuery !== undefined) { %><% } %>?page=<%= previousPage %>"
        ><%= previousPage %></a
      >
    </li>
    <% } %>

    <li class="page-item active">
      <a
        class="page-link"
        href="<% if (typeof searchQuery !== undefined) { %><% } %>?page=<%= currentPage %>"
        class="active"
        ><%= currentPage %><span class="sr-only">(current)</span></a
      >
    </li>
    <% if (hasNextPage) { %>
    <li class="page-item">
      <a
        class="page-link"
        href="<% if (typeof searchQuery !== undefined) { %><% } %>?page=<%= nextPage %>"
        ><%= nextPage %></a
      >
    </li>
    <% } %> <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
    <li class="page-item">
      <a
        class="page-link"
        href="<% if (typeof searchQuery !== undefined) { %><% } %>?page=<%= lastPage %>"
        ><%= lastPage %></a
      >
    </li>
    <% } %>
  </ul>
</nav>
